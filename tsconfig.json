{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "baseUrl": "node_modules",
    "allowJs": true,
    "module": "ES2015",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "example",
    "rollup.config.js",
    "build",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.js",
    "src/**/*.test.d.ts",
    "**/*.test.ts",
    "**/*.stories.ts"
  ],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  }
}
